<script type="text/javascript">
    require([
        'jquery',
    ], function ($) {
        $('.slider_responsive_items').hide();
        $('.design_theme_ua_regexp').hide();
        $('label[for="slider_responsive_items"]').hide()

        if ($('#slider_is_responsive').val() == '1') {
            $('.design_theme_ua_regexp').show();
            $('label[for="slider_responsive_items"]').show()
        }

        $('#slider_is_responsive').change(function () {
            var optionSelected = $(this).find("option:selected");
            var valueSelected = optionSelected.val();

            if (valueSelected == '1') {
                $('.design_theme_ua_regexp').show();
                $('label[for="slider_responsive_items"]').show()
            } else {
                $('.design_theme_ua_regexp').hide();
                $('label[for="slider_responsive_items"]').hide()
            }
        });
    });
</script>

