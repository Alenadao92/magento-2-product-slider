<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="mageplaza_product_slider" class="Mageplaza\Productslider\Block\Widget\Slider">
        <label translate="true">Product Slider</label>
        <description>Product Slide</description>
        <parameters>
            <parameter name="heading" xsi:type="text" required="false" visible="true">
                <label translate="true">Title</label>
            </parameter>
            <parameter name="product_type" xsi:type="select" required="false" visible="true"
                       source_model="Mageplaza\Productslider\Model\Config\Source\ProductTypeWidget">
                <label translate="true">Select Slider</label>
            </parameter>
        </parameters>
    </widget>
</widgets>